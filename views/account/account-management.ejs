<%- include('../partials/head', { title: 'Account Management' }) %>
<body>
  <%- include('../partials/header') %>
  <%- include('../partials/navigation', { nav }) %>

  <main class="container">
    <div class="account-management">
      <% if (message && message.length > 0) { %>
        <div class="flash-message">
          <% message.forEach(msg => { %>
            <p><%= msg %></p>
          <% }) %>
        </div>
      <% } %>
      
      <% if (accountData && accountData.account_type === "Client") { %>
        <p>Welcome back <%= accountData.account_firstname %>!</p>
      <% } else if (accountData && (accountData.account_type === "Employee" || accountData.account_type === "Admin")) { %>
        <h2>Welcome back,<%= accountData.account_firstname %> <%= accountData.account_type %>!</h2>
        <h3>Inventory Management</h3>
        <p><a href="/inv">Go to Inventory Management</a></p>
      <% } %>

      <p><a href="/account/update">Update Account Information</a></p>
    </div>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>
